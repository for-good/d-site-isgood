    "babel-plugin-add-header-comment": "1.0.3",
    "backbone": "1.4.1",
    "chalk": "5.0.1",
    "chokidar": "3.5.3",
    "chromedriver": "103.0.0",
    "ckeditor5": "34.1.0",
    "cross-env": "7.0.3",
    "cspell": "6.1.2",
    "css.escape": "1.5.1",
    "dotenv-safe": "8.2.0",
